# Pi Hole
# https://github.com/pi-hole/pi-hole/wiki/Caddy-Webserver-Frontend
0.0.0.0:80 {
  root /var/www/html/pihole

  rewrite {
    ext js
    to index.js
  }

  proxy / localhost:1080 {
    transparent
  }
}

