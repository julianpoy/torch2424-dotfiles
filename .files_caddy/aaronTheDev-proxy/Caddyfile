# Droppy File Server
files.aaronthedev.com, http://0.0.0.0:8989 {
    proxy / {$APP_IP}:8989 0.0.0.0:5000 {
        policy first
        transparent
        health_check /
        websocket
    }

    header /$/ {
        Cache-Control  "public, max-age=2678400"
    }
}

