}

# Mongo Manager, Similar to phpmy admin
mongo.aaronthedev.com {
    proxy / {$APP_IP}:7000 {
        transparent
    }
}

# Crontab ui
# https://github.com/alseambusher/crontab-ui
cron.aaronthedev.com {
    basicauth / torch2424 htpasswd=.htpasswd
    proxy / {$APP_IP}:9000 {
        transparent
    }
}

# Testbuild, Droppy directory for hosting quick builds
testbuild.aaronthedev.com {
    root /home/torch2424/droppyFileServer/files/testbuild.aaronthedev.com

    browse
}
