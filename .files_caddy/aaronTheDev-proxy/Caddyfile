# Must Pass in Proxy IP as environment variable

# Our Maintenance Failover Website
http://0.0.0.0:5000 {
  gzip
  root /home/torch2424/maintenanceFailover
}

# Home Page / Portfolio site
aaronthedev.com {
    gzip
    proxy / {$APP_IP}:8000 {
        policy first
        transparent
    }
}

# Droppy File Server
files.aaronthedev.com {
    proxy / {$APP_IP}:8989 {
        transparent
        websocket
    }

    header /$/ {
        Cache-Control  "public, max-age=2678400"
    }
}

